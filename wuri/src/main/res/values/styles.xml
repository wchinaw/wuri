<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeActivity" mce_bogus="1">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <item name="android:windowBackground">@color/share_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/dialogbackgournd</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- activity不变暗 -->
    </style>


    <style name="white_lv4.5">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="white_lv3_5">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="white_lv4">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="settings_font_info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222222</item>
    </style>


    <style name="chat_content_font" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

